<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="/halloween_release/app/views/css/stylesheet.css" rel="stylesheet" type="text/css" />


    <title>The issue tracker</title>
</head>

<body>
    <p id="notice">
        <%= notice %>
    </p>
    <h1>Issues</h1>
    < <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th>IssueID</th>
                    <th>Title</th>
                    <th>User</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @microposts.each do |micropost| %>
                    <tr>
                        <td class="text-center">1</td>
                        <td>
                            <%= micropost.id %>
                        </td>
                        <td>
                            <%= micropost.title %>
                        </td>
                        <td>
                            <%= micropost.user.name %>
                        </td>

                        <td class="td-actions text-right">
                            <button type="button" rel="tooltip" class="btn btn-info btn-just-icon btn-sm" data-original-title="" title="">
                                <i class="material-icons"><%= link_to 'Show', micropost, :class => "material-icons" %></i>

                            </button>
                            <button type="button" rel="tooltip" class="btn btn-success btn-just-icon btn-sm" data-original-title="" title="">
                                <i class="material-icons"><%= link_to 'Edit',edit_micropost_path(micropost), :class => "material-icons"%></i>
                            </button>
                            <button type="button" rel="tooltip" class="btn btn-danger btn-just-icon btn-sm" data-original-title="" title="">
                                <%= link_to 'Delete',micropost, method: :delete, data: { confirm: 'Are you sure?' }, :class => "material-icons"%>
                            </button>
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
        </div>

        <%= link_to 'Users', users_path, :class => "btn" %> |
            <%= link_to 'Create Issue', new_micropost_path, :class => "btn"%>

</body>

</html>