<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" >


    <title>The issue tracker</title>
</head>

<body>
    <p id="notice">
        <%= notice %>
    </p>
    <h1>Issues</h1>
    < <div class="table-responsive container-fluid">
        <table class="table table-borderless table-hover">
            <thead style="border-bottom:2px solid #DFE1E6;">
                <tr>
                    <th style="width:25%;">Title</th>
                    <th style="width:5%;">T</th>
                    <th style="width:5%;">P</th>
                    <th style="width:10%;">Status</th>
                    <th style="width:5%;">Votes</th>
                    <th style="width:10%;">Asignee</th>
                    <th style="width:10%;">Created</th>
                    <th style="width:10%;">Updated</th>                    
                    <th style="width:20%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @microposts.each do |micropost| %>
                    <tr>
                        <td>
                            <%= micropost.id %><%= micropost.title %>
                        </td>
                        <td>
                            T
                        </td>
                        <td>
                            P
                        </td>
                        <td>
                            Ocupado
                        </td>
                        <td>
                            1
                        </td>
                        <td>
                            <%= micropost.user.name %>
                        </td>
                        <td>
                            Created
                        </td>
                        <td>
                            Updated
                        </td>                        
                        <td>
                            <div class="content-desktop">
                                <div class="btn-group-sm">
                                  <button type="button" class="btn btn-primary btn-sm"><%= link_to 'Show', micropost, :class => "material-icons" %></button>&nbsp;
                                  <button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit',edit_micropost_path(micropost), :class => "material-icons"%></button>&nbsp;
                                  <button type="button" class="btn btn-danger btn-sm"><%= link_to 'Delete',micropost, method: :delete, data: { confirm: 'Are you sure?' }, :class => "material-icons"%></button>&nbsp;
                                </div>
                            </div>
                            <div class="content-mobile" style="display:none;"> 
                                <div class="icons-group">
                                    <i class="fa fa-eye" data-toggle="tooltip" data-placement="top" title="Show"></i>&nbsp;
                                    <i class="fa fa-edit" data-toggle="tooltip" data-placement="top" title="Edit"></i>&nbsp;
                                    <i class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="Delete"></i>
                                </div>
                                </div>
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
        </div>

        <%= link_to 'Users', users_path, :class => "btn" %> |
            <%= link_to 'Create Issue', new_micropost_path, :class => "btn"%>

</body>

</html>